<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ResocontoChallenge"
    tools:context=".ResoContochallengeActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nome gara"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_weight="1"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical" >

        <ImageView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_baseline_person_24"
            app:tint="@color/red" />

           <TextView
               android:textColor="@color/red"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Username1"
               android:textAlignment="center"
               android:layout_gravity="center"
               android:textSize="18dp"/>

       </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Risultato"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_baseline_person_24"
                app:tint="@color/blu"/>

            <TextView
                android:textColor="@color/blu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="18dp"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Km"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"/>
    <ProgressBar
        android:id="@+id/KmProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="50"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="VelocitÃ "
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"/>
    <ProgressBar
        android:id="@+id/velocitaProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="50"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Calorie"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"/>
    <ProgressBar
        android:id="@+id/CalorieProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="50"
        />




</LinearLayout>

</RelativeLayout>