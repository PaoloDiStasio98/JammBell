<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CellaStorico"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:background="@drawable/box1"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_constraintCircleRadius="50dp">

    <TextView
        android:id="@+id/SessioneDataCellaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:text="Sessione: DATA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TempoCellaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="3dp"
                android:text="Tempo"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/CalorieCellaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="3dp"
                android:text="Calorie"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/KmCellaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="3dp"
                android:text="Km percorsi"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PassiCellaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="3dp"
                android:text="Passi"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/VelocitaCellaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="3dp"
                android:text="VelocitÃ  media"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ValutazioneCellaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:gravity="right"
            android:padding="3dp"
            android:text="0/5"
            android:textSize="30dp" />
    </LinearLayout>
</LinearLayout>