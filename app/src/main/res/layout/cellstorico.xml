<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CellaStorico"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:background="@drawable/box1"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_constraintCircleRadius="50dp">

    <TextView
        android:id="@+id/SessioneDataCellaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="3dp"
        android:text="Sessione: DATA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"

        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/CalorieCellaTextView"
        app:layout_constraintTop_toTopOf="@+id/CalorieCellaTextView">


        <TextView
            android:id="@+id/TempoCellaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="3dp"
            android:text="Tempo"
            android:textColor="@color/neroapp"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CalorieCellaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:text="Calorie"
            android:textColor="@color/neroapp"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TempoCellaTextView" />

        <TextView
            android:id="@+id/KmCellaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:text="Km percorsi"
            android:textColor="@color/neroapp"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CalorieCellaTextView" />

        <TextView
            android:id="@+id/PassiCellaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:text="Passi"
            android:textColor="@color/neroapp"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/KmCellaTextView" />

        <TextView
            android:id="@+id/VelocitaCellaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:text="VelocitÃ  media"
            android:textColor="@color/neroapp"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PassiCellaTextView" />


        <TextView
            android:id="@+id/ValutazioneCellaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="116dp"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="3dp"
            android:gravity="center_vertical"
            android:text="Valutazione"
            android:textAlignment="textEnd"
            app:drawableRightCompat="@drawable/ic_baseline_star_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/VelocitaCellaTextView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>